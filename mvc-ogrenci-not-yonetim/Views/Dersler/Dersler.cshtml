@using mvc_ogrenci_not_yonetim.Models.EntityFramework;
@model List<TBL_DERSLER>
@{
    ViewBag.Title = "Dersler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<table class="table table-bordered mt-5">

    <thead>
        <tr>
            <th>DERS ID</th>
            <th>DERS ADI</th>
            <th colspan="2">İŞLEMLER</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DERSID</td>
                <td>@item.DERSAD</td>
                <td><a href="/Dersler/DersSil/@item.DERSID" class="btn btn-danger">SİL</a> </td>
                <td><a href="/Dersler/DersGetir/@item.DERSID" class="btn btn-warning">GÜNCELLE</a> </td>
            </tr>
        }
    </tbody>


</table>

<a href="/Dersler/YeniDersEkle" class="btn btn-primary">Yeni Ders Ekle</a>


